{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": false,
    "target": "es2019",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "rootDir": "./src",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "exclude": ["node_modules", "dist", "esbuild.config.js"]
}
